<%= form_for @product, url: {action: "create"} do |f| %>
	<div class="field">
	<%= f.label :category %>
	</br>
	<% categories = Category.all.map{ |category| [category.category, category.id] } %>
			
			<%= f.select(:category_id, options_for_select(categories)) %>
			
	</div>
	<div class="field">
	<%= f.label :name, "Назва товару" %>
	</br>
	<%= f.text_field :name %>
	</div>
	<div class="field">
	
	<%= f.label :description, "Опис" %>
	</br>
	<%= f.text_area :description %>
	</div>

	<div class="field">
	<%= f.label :price, "Ціна" %>
	</br>
	<%= f.text_field :price %>
	</div>
	<div class="field">
	<%= f.label :amount, "Кількість" %>
	</br>
	<%= f.text_field :amount %>
	</div>
	<div class="field">
	<%= f.label :img, "Назва файлу" %>
	</br>
	<%= f.file_field :img %>
	<%= f.hidden_field :img_cache %>
	</div>
	</br>
	<div class="field">
	<%= f.submit "Створити", class: "btn btn-large btn-primary" %>
	</div>

<% end %>