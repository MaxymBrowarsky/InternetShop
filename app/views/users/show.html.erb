<div class="accordion">
	<% @user.orders.each do |order| %>
		<div class="card">
    <div class="card-header" id= <%= 'heading' + "#{order.id}" %>>
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target=<%= '#order' + "#{order.id}" %> aria-expanded="true" aria-controls=<%= 'order' + "#{order.id}" %>>
          <%= order.name + ' ' + order.surname + ' ' + order.created_at.strftime("%Y-%m-%d %H-%m") %>
        </button>
      </h5>
    </div>

    <div id=<%= 'order' + "#{order.id}" %> class="collapse" aria-labelledby=<%= 'heading' + "#{order.id}" %> data-parent="#accordion">
      <div class="card-body">
        	<%= render(order.cart_items) %>
        </div>
    </div>
  </div>
	<% end %>
</div>
